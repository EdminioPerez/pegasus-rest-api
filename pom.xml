	<dependencies>
		<dependency>
			<groupId>com.greek</groupId>
			<artifactId>pegasus-commons</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.greek</groupId>
			<artifactId>pegasus-main-domain</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>

